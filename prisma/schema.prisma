generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Member {
  id            Int     @id @default(autoincrement())
  name          String
  email         String  @unique
  totalBooking  Int     @default(0)
  roomsBooked   Room[]  @relation("Booking")
}

model Room {
  id          Int      @id @default(autoincrement())
  roomNumber  String
  booking     Boolean  @default(false)
  bookingBy   Int?
  bookedAt    DateTime? // เพิ่มฟิลด์นี้เพื่อเก็บเวลาในการจอง
  member      Member?  @relation("Booking", fields: [bookingBy], references: [id])
}
